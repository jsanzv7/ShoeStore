<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/shoe_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7CF4F0F0"
    tools:context=".ShoeListFragment">

    <ScrollView
        android:id="@+id/shoe_list_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <LinearLayout
            android:id="@+id/shoe_list_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"/>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_shoe_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="36dp"
        android:clickable="true"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@+id/shoe_list_layout"
        app:layout_constraintEnd_toEndOf="@+id/shoe_list_layout"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>